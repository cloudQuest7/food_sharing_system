<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Epilogue:wght@400;500;700;900&family=Noto+Sans:wght@400;500;700;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            font-family: Epilogue, "Noto Sans", sans-serif;
            background-color: #fcfaf8;
        }
        .sidebar-icon {
            font-size: 24px;
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .nav-link {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            transition: all 0.2s;
            color: #9c7349;
            gap: 0.75rem;
        }
        .nav-link:hover {
            background-color: #fff8f3;
        }
        .nav-link.active {
            background-color: #f2800d;
            color: white;
        }
        .logo-container {
            display: flex;
            align-items: center;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #e8dbce;
        }
        .logo-icon {
            width: 2rem;
            height: 2rem;
            margin-right: 0.75rem;
        }
        .logo-text {
            font-size: 1.25rem;
            font-weight: 700;
            color: #1c140d;
        }
    </style>
</head>
<body class="bg-[#fcfaf8]">
    <!-- Sidebar -->
    <aside class="fixed top-0 left-0 w-64 h-full bg-white border-r border-[#e8dbce] z-50">
        <div class="logo-container">
            <div class="logo-icon">
                <svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M8.57829 8.57829C5.52816 11.6284 3.451 15.5145 2.60947 19.7452C1.76794 23.9758 2.19984 28.361 3.85056 32.3462C5.50128 36.3314 8.29667 39.7376 11.8832 42.134C15.4698 44.5305 19.6865 45.8096 24 45.8096C28.3135 45.8096 32.5302 44.5305 36.1168 42.134C39.7033 39.7375 42.4987 36.3314 44.1494 32.3462C45.8002 28.361 46.2321 23.9758 45.3905 19.7452C44.549 15.5145 42.4718 11.6284 39.4217 8.57829L24 24L8.57829 8.57829Z" fill="#f2800d"/>
                </svg>
            </div>
            <span class="logo-text">WeShareIt</span>
        </div>
        
        <nav class="p-4">
            <ul class="space-y-2">
                <li>
                    <a href="/donor/dashboard" class="nav-link">
                        <i class="fas fa-home sidebar-icon"></i>
                        <span>Home</span>
                    </a>
                </li>
                <li>
                    <a href="/donor/post-food" class="nav-link">
                        <i class="fas fa-plus-circle sidebar-icon"></i>
                        <span>Post Food</span>
                    </a>
                </li>
                <li>
                    <a href="/donor/donation" class="nav-link active">
                        <i class="fas fa-box-open sidebar-icon"></i>
                        <span>My Donations</span>
                    </a>
                </li>
                <li>
                    <a href="/donor/requests" class="nav-link">
                        <i class="fas fa-bell sidebar-icon"></i>
                        <span>View Requests</span>
                    </a>
                </li>
                <li>
                    <a href="/donor/profile" class="nav-link">
                        <i class="fas fa-user sidebar-icon"></i>
                        <span>Profile</span>
                    </a>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="ml-64 p-8">
        <div class="max-w-6xl mx-auto">
            <div class="flex items-center justify-between mb-8">
                <div>
                    <h1 class="text-3xl font-bold text-[#1c140d] mb-2"><%= user.name %>'s Donations</h1>
                    <div class="flex items-center gap-4">
                        <div class="bg-gradient-to-r from-[#f2800d] to-[#ff9f40] px-4 py-2 rounded-lg text-white">
                            <div class="flex items-center gap-2">
                                <span class="text-2xl">üèÜ</span>
                                <span class="text-2xl font-bold"><%= userPoints %></span>
                                <span class="text-sm opacity-90">Points</span>
                            </div>
                        </div>
                        <div class="text-[#666]">
                            <p class="font-medium">Make donations to earn more points!</p>
                            <ul class="text-sm mt-1 list-disc list-inside">
                                <li>+10 points when your donation is accepted</li>
                                <li>+5 bonus points when the donation is completed</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Stats Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                <div class="bg-white p-6 rounded-xl border border-[#e8dbce]">
                    <h3 class="text-sm text-[#666] mb-1">Total Donations</h3>
                    <p class="text-3xl font-bold text-[#1c140d]"><%= donations.length %></p>
                </div>
                <div class="bg-white p-6 rounded-xl border border-[#e8dbce]">
                    <h3 class="text-sm text-[#666] mb-1">Pending</h3>
                    <p class="text-3xl font-bold text-[#f2800d]"><%= donations.filter(d => d.status === 'pending').length %></p>
                </div>
                <div class="bg-white p-6 rounded-xl border border-[#e8dbce]">
                    <h3 class="text-sm text-[#666] mb-1">Accepted</h3>
                    <p class="text-3xl font-bold text-[#0066cc]"><%= donations.filter(d => d.status === 'accepted').length %></p>
                </div>
                <div class="bg-white p-6 rounded-xl border border-[#e8dbce]">
                    <h3 class="text-sm text-[#666] mb-1">Completed</h3>
                    <p class="text-3xl font-bold text-[#00cc00]"><%= donations.filter(d => d.status === 'completed').length %></p>
                </div>
            </div>

            <!-- Donations Section -->
            <div class="bg-white p-6 rounded-xl border border-[#e8dbce]">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-xl font-bold text-[#1c140d]">My Donations</h2>
                    <a href="/donor/create-donation" class="px-4 py-2 bg-[#f2800d] text-white rounded-lg hover:bg-[#e67600] transition-colors">
                        Post New Donation
                    </a>
                </div>

                <% if (donations.length === 0) { %>
                    <div class="text-center py-12">
                        <img src="/images/empty-donations.svg" alt="No donations yet" class="w-32 h-32 mx-auto mb-4">
                        <h3 class="text-xl font-bold text-[#1c140d] mb-2">No donations yet</h3>
                        <p class="text-[#666] mb-6">Start sharing food with your community</p>
                        <a href="/donor/create-donation" class="inline-block px-6 py-3 bg-[#f2800d] text-white rounded-lg hover:bg-[#e67600] transition-colors">
                            Post Your First Donation
                        </a>
                    </div>
                <% } else { %>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <% donations.forEach(donation => { %>
                            <div class="bg-white rounded-xl border border-[#e8dbce] p-6 relative">
                                <div class="absolute top-4 right-4">
                                    <span class="px-3 py-1 rounded-full text-sm font-medium
                                        <%= donation.status === 'pending' ? 'bg-[#fff3e6] text-[#f2800d]' : '' %>
                                        <%= donation.status === 'accepted' ? 'bg-[#e6f3ff] text-[#0066cc]' : '' %>
                                        <%= donation.status === 'completed' ? 'bg-[#e6ffe6] text-[#00cc00]' : '' %>
                                    ">
                                        <%= donation.status.charAt(0).toUpperCase() + donation.status.slice(1) %>
                                    </span>
                                </div>
                                <h3 class="text-lg font-semibold text-[#1c140d] mb-4 pr-24"><%= donation.foodType %></h3>
                                <div class="space-y-2 text-[#666]">
                                    <p><strong>Quantity:</strong> <%= donation.quantity %></p>
                                    <p><strong>Expires:</strong> <%= new Date(donation.expiryDate).toLocaleDateString() %></p>
                                    <p><strong>Pickup:</strong> <%= donation.pickupLocation %></p>
                                    <% if (donation.description) { %>
                                        <p><strong>Description:</strong> <%= donation.description %></p>
                                    <% } %>
                                </div>
                                <div class="mt-4 pt-4 border-t border-[#e8dbce] flex items-center justify-between">
                                    <span class="text-sm text-[#9c7349]">
                                        Posted <%= new Date(donation.createdAt).toLocaleDateString() %>
                                    </span>
                                    <% if (donation.status === 'accepted') { %>
                                        <button onclick="markAsCompleted('<%= donation._id %>')" 
                                            class="px-3 py-1 bg-[#e6f3ff] text-[#0066cc] rounded-lg hover:bg-[#cce6ff] transition-colors">
                                            Mark as Completed
                                        </button>
                                    <% } %>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <script>
        function markAsCompleted(donationId) {
            if (confirm('Are you sure you want to mark this donation as completed?')) {
                fetch(`/api/donations/${donationId}/complete`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                }).then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Error marking donation as completed');
                    }
                });
            }
        }
    </script>
</body>
</html>